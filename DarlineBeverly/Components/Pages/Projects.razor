@page "/projects"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using DarlineBeverly.Components.Pages.ProjectsComponents
@using Microsoft.AspNetCore.Components.Routing


<div class="projects-page">

    <nav class="breadcrumb-nav">
        <ul>
            <li>
                <button @onclick="() => SetCategory(ProjectCategory.GraphicsDesign)"
                        class="@GetActiveClass(ProjectCategory.GraphicsDesign)">
                    Graphics Design
                </button>
            </li>
            <li>
                <button @onclick="() => SetCategory(ProjectCategory.WebDesign)"
                        class="@GetActiveClass(ProjectCategory.WebDesign)">
                    Web Design
                </button>
            </li>
            <li>
                <button @onclick="() => SetCategory(ProjectCategory.WebDev)"
                        class="@GetActiveClass(ProjectCategory.WebDev)">
                    Web Development
                </button>
            </li>
            <li>
                <button @onclick="() => SetCategory(ProjectCategory.Research)"
                        class="@GetActiveClass(ProjectCategory.Research)">
                    Research
                </button>
            </li>
        </ul>
    </nav>

    <div class="project-content">
        @switch (currentCategory)
        {
            case ProjectCategory.WebDesign:
                <WebDesign />
                break;

            case ProjectCategory.GraphicsDesign:
                <GraphicsDesign />
                break;

            case ProjectCategory.WebDev:
                <WebDevelopment />
                break;

            case ProjectCategory.Research:
                <TechnicalResearch/>
                break;

            default:
                <GraphicsDesign/>
                break;
        }
    </div>
</div>

@code {
    public enum ProjectCategory { WebDesign, GraphicsDesign, WebDev, Research }

    private ProjectCategory currentCategory = ProjectCategory.GraphicsDesign;

    private void SetCategory(ProjectCategory category)
    {
        currentCategory = category;
    }

    private string GetActiveClass(ProjectCategory category)
    {
        return currentCategory == category ? "active" : "";
    }

}
<style>.projects-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px 0;
    font-family: Arial, sans-serif;
}

/* Center the breadcrumb nav */
.breadcrumb-nav {
    text-align: center;
    margin-bottom: 30px;
}

/* Remove default list styling */
.breadcrumb-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 20px; /* spacing between links */
}

/* Buttons look like text by default */
.breadcrumb-nav button {
    background: transparent;
    border: 2px solid #28a745; /* green outline */
    color: #28a745;
    font-size: 18px;
    font-weight: 500;
    padding: 8px 20px;
    border-radius: 6px;
    cursor: pointer;
    text-decoration: none;       /* remove underline by default */
    transition: all 0.3s ease;
}

/* Hover effect: subtle background */
.breadcrumb-nav button:hover {
    background: rgba(40, 167, 69, 0.1); /* light green hover */
}

/* Active state: filled green & underline */
.breadcrumb-nav button.active {
    background: #28a745;         /* green fill */
    color: white;
   
    border-color: #28a745;
}

/* Optional: when button is focused/clicked */
.breadcrumb-nav button:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.3);
}
</style>

