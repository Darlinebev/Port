@inherits LayoutComponentBase

<div class="page">

    <main>
        <div class="top-row px-4">
            <a href ="/">Home</a>
            <a href ="/projects">Projects</a>
            <a href ="/blog">Blog</a>
            <a href ="/contact">Contact</a>

         
           <AuthorizeView>
            <Authorized>
                <div class="nav-item px3">              
                <NavLink class="nav-link" href="authentication/logout">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Logout
                </NavLink>
                </div>  
            </Authorized>

            <NotAuthorized>
                 <div class="nav-item px3"> 
             <NavLink class="nav-link" href="authentication/login">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                </NavLink>
                </div>
                 <div class="nav-item px3"> 
                 <NavLink class="nav-link" href="authentication/register">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Register
                </NavLink>
                </div>

            </NotAuthorized>
        </AuthorizeView>
      
               
        </div>

       

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
